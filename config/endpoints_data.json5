{
    auth: {
        register: {
            load_data: true,
            data: {
                username: { min_len: 4, max_len: 16 },
                password: { min_len: 8 },
                email: { type: "email" }
            }
        },
        login: {
            load_data: true,
            data: {
                password: { min_len: 8 },
                email: { type: "email" }
            }
        },
        refresh: {
            load_data: true,
            data: {
                refresh_token: {}
            }
        }
    },
    posts: {
        create_post: {
            load_data: true,
            data: {
                content: { min_len: 1, max_len: 1024 }
            },
            optional_data: {
                tags: { type: "list" },
                media: { type: "list" }
            }
        },
        update_post: {
            load_data: true,
            optional_data: {
                content: { min_len: 1, max_len: 1024 },
                tags: { type: "list" },
                media: { type: "list" }
            }
        },
        add_reaction: {
            load_data: true,
            data: {
                is_like: { type: "bool" }
            }
        }
    }
}