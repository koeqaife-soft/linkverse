{
    ping: {
        skip_checks: true
    },
    auth: {
        register: {
            no_auth: true,
            load_data: true,
            data: {
                username: { min_len: 4, max_len: 16 },
                password: { min_len: 8 },
                email: { type: "email" }
            }
        },
        login: {
            no_auth: true,
            load_data: true,
            data: {
                password: { min_len: 8 },
                email: { type: "email" }
            }
        },
        refresh: {
            no_auth: true,
            load_data: true,
            optional_data: {
                refresh_token: {}
            }
        },
        remove_cookies: {
            no_auth: true
        },
        logout: {
            no_auth: true
        }
    },
    posts: {
        create_post: {
            load_data: true,
            data: {
                content: { min_len: 1, max_len: 16384, filter: "xss" }
            },
            optional_data: {
                tags: {
                    type: "list", max_len: 8,
                    value_max_len: 22, value_min_len: 1
                },
                media: { type: "list" }
            }
        },
        update_post: {
            load_data: true,
            optional_data: {
                content: { min_len: 1, max_len: 16384 },
                tags: { type: "list", max_len: 8 },
                media: { type: "list" }
            }
        },
        add_reaction: {
            load_data: true,
            data: {
                is_like: { type: "bool" }
            }
        },
        view_posts: {
            load_data: true,
            data: {
                posts: { type: "list", max_len: 10, min_len: 1 }
            }
        },
        popular_posts: {
            optional_params: {
                hide_viewed: { type: "bool" },
                cursor: { min_len: 1, max_len: 256 },
                limit: { type: "int", min: 1, max: 1000 }
            }
        },
        new_posts: {
            optional_params: {
                hide_viewed: { type: "bool" },
                cursor: { min_len: 1, max_len: 256 },
                limit: { type: "int", min: 1, max: 1000 }
            }
        },
        get_posts_batch: {
            params: {
                posts: {
                    type: "list",
                    min_len: 1, max_len: 10,
                    v_max_len: 32, v_min_len: 10,
                    is_digit: true, 
                    f_max_len: 400
                }
            }
        },
        create_comment: {
            load_data: true,
            data: {
                content: { min_len: 1, max_len: 1024, filter: "xss" }
            }
        },
        get_comments: {
            optional_params: {
                cursor: { min_len: 1, max_len: 256 }
            }
        },
        comment_add_reaction: {
            load_data: true,
            data: {
                is_like: { type: "bool" }
            }
        },
    },
    users: {
        update_profile_me: {
            load_data: true,
            optional_data: {
                display_name: { min_len: 1, max_len: 16 },
                avatar_url: { min_len: 1, max_len: 8192 },
                banner_url: { min_len: 1, max_len: 8192 },
                bio: { min_len: 1, max_len: 512 },
                languages: {
                    type: "list",
                    min_len: 1, max_len: 8,
                    value_max_len: 16, value_min_len: 1
                }
            }
        },
        add_favorite: {
            load_data: true,
            data: {
                post_id: { min_len: 10, max_len: 32 }
            },
            optional_data: {
                comment_id: { min_len: 10, max_len: 32 }
            }
        },
        rem_favorite: {
            params: {
                post_id: { min_len: 10, max_len: 32 }
            },
            optional_params: {
                comment_id: { min_len: 10, max_len: 32 }
            }
        },
        get_favorites: {
            optional_params: {
                cursor: { min_len: 1, max_len: 256 },
                type: { values: ["posts", "comments"] },
                preload: { type: "bool" }
            }
        },
        get_reactions: {
            optional_params: {
                cursor: { min_len: 1, max_len: 256 },
                type: { values: ["posts", "comments"] },
                preload: { type: "bool" },
                is_like: { type: "bool" }
            }
        },
        get_following: {
            optional_params: {
                cursor: { min_len: 1, max_len: 256 },
                preload: { type: "bool" }
            }
        },
        get_user_posts: {
            optional_params: {
                cursor: { min_len: 1, max_len: 256 },
                sort: { values: ["old", "new", "popular"] }
            }
        },
    }
}